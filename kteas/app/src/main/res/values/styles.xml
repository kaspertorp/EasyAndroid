<resources>

    <!-- Base application theme. -->
    <style name="KT_slide_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/kt_animation</item>
    </style>


    <style name="kt_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/kt_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/kt_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/kt_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/kt_slide_out_right</item>
    </style>
</resources>
